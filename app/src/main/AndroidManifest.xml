<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.training.android.basicadapters">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SimpleAdapterActivity"
            android:label="@string/title_activity_simple_adapter"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.training.android.basicadapters.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.CustomListActivity"
            android:label="@string/title_activity_custom_list"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.training.android.basicadapters.MainActivity"/>
        </activity>
        <activity
            android:name=".activities.CustomGridActivity"
            android:label="@string/title_activity_custom_grid"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.training.android.basicadapters.MainActivity"/>
        </activity>
    </application>

</manifest>